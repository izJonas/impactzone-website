//- Variable Declaration
- var isMongo = false

doctype html
html(lang='de')
  head
    title= title

    //- Meta Tags
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(charset="UTF-8")

    //- CSS Files
    link(rel="stylesheet" href="/css/iz-style.css" type="text/css" media="screen and (orientation: landscape)" defer)

    //- Scripts
    script(src="https://kit.fontawesome.com/56d793c70e.js" crossorigin="anonymous"  type="application/ecmascript" defer)
    script(type="module" src="/js/iz-module-load.js" )

    script(src="/assets/jquery.min.js" type="application/ecmascript" defer)

    script(src="/js/iz-vars.js" type="application/ecmascript" defer)
    script(src="/js/iz-jquery.js" type="application/ecmascript" defer)
    script(src="/js/iz-parallax.js" type="application/ecmascript" defer)
    script(src="/js/iz-animations.js" type="application/ecmascript" defer)
    script(src="/js/iz-custom-scroll.js" type="application/ecmascript" defer)

    script(src="/js/iz-run.js" defer)
  body(onmousemove="UpdateMousePosition(event);")
    #iz-wrapper
      nav#iz-nav-list
        ul#iz-nav-ul
      main#iz-content(
        class=sitesContent.name
        )
        block content
      include footer.pug